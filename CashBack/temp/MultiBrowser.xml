<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >
<suite name="TestNgSeleniumSuite" parallel="tests" thread-count="4">

	<test name="Successful Login">
		<parameter name="browser" value="chrome"></parameter>
		<parameter name="instance" value="1"></parameter>
		<classes>
			<class name="ui.MultiBrowser" />
		</classes>
	</test>


	<test name="Invalid UserName error">
		<parameter name="browser" value="chrome"></parameter>
		<parameter name="instance" value="2"></parameter>
		<classes>
			<class name="ui.MultiBrowser" />
		</classes>
	</test>

	<test name="Invalid password error">
		<parameter name="browser" value="chrome"></parameter>
		<parameter name="instance" value="3"></parameter>
		<classes>
			<class name="ui.MultiBrowser" />
		</classes>
	</test>
	
	<test name="Invalid user name and password error">
		<parameter name="browser" value="chrome"></parameter>
		<parameter name="instance" value="4"></parameter>
		<classes>
			<class name="ui.MultiBrowser" />
		</classes>
	</test>

</suite>